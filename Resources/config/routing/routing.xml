<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
    https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="rich_id_tour_enable_tour" path="/rich-id-tours/enable"
           controller="RichId\TourBundle\Controller\TourController::enable"
           methods="POST" />

    <route id="rich_id_tour_disable_tour" path="/rich-id-tours/disable"
           controller="RichId\TourBundle\Controller\TourController::disable"
           methods="POST" />

    <route id="rich_id_tour_perform_tour" path="/rich-id-tours/perform"
           controller="RichId\TourBundle\Controller\TourController::perform"
           methods="POST" />

    <route id="rich_id_tour_reset_performed_tours" path="/rich-id-tours/perform"
           controller="RichId\TourBundle\Controller\TourController::resetPerformedTours"
           methods="DELETE" />

    <route id="rich_id_tour_administration_tours" path="/administration/tours"
           controller="RichId\TourBundle\Controller\AdministrationController::tours"
           methods="GET" />
</routes>

