<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
    https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="rich_id_tour_enable_tour" path="/rich-id-tours/disable"
           controller="RichId\TourBundle\Controller\TourDisabledController::delete"
           methods="DELETE" />

    <route id="rich_id_tour_disable_tour" path="/rich-id-tours/enable"
           controller="RichId\TourBundle\Controller\TourDisabledController::post"
           methods="POST" />

    <route id="rich_id_tour_perform_tour" path="/rich-id-tours/perform"
           controller="RichId\TourBundle\Controller\TourPerformController::perform"
           methods="POST" />

    <route id="rich_id_tour_reset_performed_tours" path="/rich-id-tours/perform"
           controller="RichId\TourBundle\Controller\TourPerformController::resetTours"
           methods="DELETE" />
</routes>
